import requests

url = 'https://api.utilityapi.com/split-screen'
headers = {
  'x-api-key': 'your_api_key_here'
}

files = [
  ('videos', open('video1.mp4', 'rb')),
  ('videos', open('video2.mp4', 'rb')),
  # For 2x2 layout, include two more videos
  # ('videos', open('video3.mp4', 'rb')),
  # ('videos', open('video4.mp4', 'rb')),
]

data = {
  'layout': '1x2'  # Options: '2x2', '1x2', '2x1'
}

response = requests.post(url, headers=headers, files=files, data=data)

with open('split-screen-video.mp4', 'wb') as f:
  for chunk in response.iter_content(chunk_size=8192):
    f.write(chunk)
              </code></pre>
