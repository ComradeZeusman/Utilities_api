      <section class="mb-16">
        <h2
          class="text-2xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500"
        >
          Code Examples
        </h2>

        <div class="bg-gray-800/50 p-6 rounded-xl border border-gray-700">
          <div class="mb-4">
            <div class="flex gap-2 mb-4">
              <button
                onclick="showTab('js')"
                class="tab-button bg-blue-500 text-white px-4 py-2 rounded-full"
              >
                JavaScript
              </button>
              <button
                onclick="showTab('python')"
                class="tab-button bg-gray-700 text-gray-300 px-4 py-2 rounded-full"
              >
                Python
              </button>
              <button
                onclick="showTab('php')"
                class="tab-button bg-gray-700 text-gray-300 px-4 py-2 rounded-full"
              >
                PHP
              </button>
            </div>

            <div id="js" class="tab-content">
              <pre
                class="bg-gray-900 p-4 rounded-lg"
              ><code class="language-javascript">
// Using Fetch API
const form = new FormData();
form.append('video', videoFile);
form.append('text', 'My Watermark');

const response = await fetch('https://api.utilityapi.com/watermark', {
    method: 'POST',
    headers: {
        'x-api-key': 'your_api_key_here'
    },
    body: form
});

const blob = await response.blob();
const url = window.URL.createObjectURL(blob);
const a = document.createElement('a');
a.href = url;
a.download = 'watermarked-video.mp4';
a.click();
                        </code></pre>
            </div>

            <div id="python" class="tab-content hidden">
              <pre
                class="bg-gray-900 p-4 rounded-lg"
              ><code class="language-python">
import requests

url = 'https://api.utilityapi.com/watermark'
headers = {
    'x-api-key': 'your_api_key_here'
}

files = {
    'video': open('video.mp4', 'rb'),
    'text': (None, 'My Watermark')
}

response = requests.post(url, headers=headers, files=files)

with open('watermarked-video.mp4', 'wb') as f:
    for chunk in response.iter_content(chunk_size=8192):
        f.write(chunk)
                        </code></pre>
            </div>

            <div id="php" class="tab-content hidden">
              <pre
                class="bg-gray-900 p-4 rounded-lg"
              ><code class="language-php">
<?php
$curl = curl_init();
$file = new CURLFile('video.mp4');

curl_setopt_array($curl, [
    CURLOPT_URL => 'https://api.utilityapi.com/watermark',
    CURLOPT_RETURNTRANSFER => true,
    CURLOPT_POST => true,
    CURLOPT_HTTPHEADER => [
        'x-api-key: your_api_key_here'
    ],
    CURLOPT_POSTFIELDS => [
        'video' => $file,
        'text' => 'My Watermark'
    ]
]);

$response = curl_exec($curl);
file_put_contents('watermarked-video.mp4', $response);
curl_close($curl);
                        </code></pre>
